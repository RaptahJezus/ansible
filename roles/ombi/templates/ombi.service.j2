[Unit]
Description=Ombi - PMS Requests System
After=network-online.target

[Service]
User={{ ombi_user }}
Group={{ ombi_group }}
WorkingDirectory=/opt/Ombi/
ExecStart=/opt/Ombi/Ombi --storage /lxc-data
Type=simple
TimeoutStopSec=30
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target